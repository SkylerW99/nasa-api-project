<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--import font-->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Judson:ital,wght@0,400;0,700;1,400&family=Proza+Libre:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap');
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="styles/main.css">


</head>

<body>
    <!-- Nav -->
    <nav class="navbar navbar-dark bg-col">
        <a class="navbar-brand ms-5" href="/">
            <img src="styles/assets/nasa.svg" height="60" alt="">
        </a>
    </nav>

    <!-- today's pic -->
    <% if (locals.tdImage){ %>
        <div class="section" id="one" style="background-image:url('<%=tdImage %>')">
            <div class="content width-50">

                <div class="title-description">
                    <p> Today's Astronomy picture </p>
                    <h2>
                        <%= tdTitle %>
                    </h2>
                </div>
                <div class="title-description">
                    <p>Date</p>
                    <h4>
                        <%= tdDate %>
                    </h4>
                </div>

                <div class="title-description">
                    <p>Description</p>
                    <p>
                        <%= tdExplanation %>
                    </p>
                </div>
            </div>
        </div>
        <% } %>

            <!-- seleect a day entry -->
            <div class="section" id="two">
                <div class="content no-bg p-0">
                    <!-- input -->
                    <div class="title-description gap-1">
                        <p class="fs-4">Enter a past date to view the astronomy picture</p>
                        <form id="dateForm" class="horizontal-align bottom">
                            <input class='form-control' type="date" id="start" name="date" value="Select a date"
                                min="1900-01-01" />
                            <input type="submit" value="Submit" class="btn btn-light">
                        </form>
                    </div>

                </div>
            </div>

            <!-- selected date pic -->
            <!--populate the content only when there's response -->
            <div class="section" id="three">
                <div class="content width-50">
                    <div class="title-description">
                        <p> Astronomy picture </p>
                        <h2 id="sdTitle">
                            <!--poplate the title-->
                        </h2>
                    </div>
                    <div class="title-description">
                        <p>Date</p>
                        <h4 id="sdDate">
                            <!--poplate the date-->
                        </h4>
                    </div>

                    <div class="title-description">
                        <p>Description</p>
                        <p id="sdExplanation">
                            <!--poplate the explanation-->
                        </p>
                    </div>
                </div>
            </div>

            <div class="section" id="four">
                <div class="content no-bg p-0">
                    <div class="title-description gap-1">
                        <p class="fs-4">View the astronomy picture for the last 3 months</p>
                        <form id="pastDays">
                            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                                <button id="buttonOne" type="submit" name="month" value="<%= locals.lastThreeMonthsVal[0] %>" class="btn btn-light"><%= locals.lastThreeMonths[0] %></button>
                                <button id="buttonTwo" type="submit" name="month" value="<%= locals.lastThreeMonthsVal[1] %>" class="btn btn-light"><%= locals.lastThreeMonths[1] %></button>
                                <button id="buttonThree" type="submit" name="month" value="<%= locals.lastThreeMonthsVal[2] %>" class="btn btn-light"><%= locals.lastThreeMonths[2] %></button>
                            </div>
                        </form>
                    </div>
                    <div id="gridImages">
                    </div>
                </div>
            </div>


            <script type="module" src="/scripts/app.js"></script>
</body>

</html>